<li id="<%= dom_id(forum) %>" class="forum">
  
  <div class="last_post">
    <%= forum_last_post_info(forum)%>
  </div>
  
  <div class="info">
    <h2><%=link_to h(forum.name), forum_path(forum) %></h2>
    <span class="details"><%= forum_details(forum) %></span>
    <%=h forum.description %><br/>

    <%- if is_admin @u %>
      <%= inline_tb_link('Edit', "#{dom_id(forum)}_edit", {:title => "Editing forum #{forum.name}",
                                                           :id => "#{dom_id(forum)}_edit_link"}) %> : 
      <%= link_to_remote 'Destroy', :url => forum, :confirm => 'Are you sure?', :method => :delete, :class=> "destroy" %>
    <% end %>
  </div>
  
  <div id="<%= dom_id(forum)%>_edit" class="hidden">
    <% less_remote_form_for(forum) do |f| %>
      <%= render :partial => 'form', :locals => {:f => f} %>
    <% end %>
  </div>

  
</li>