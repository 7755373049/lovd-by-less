<h1><%= SITE_NAME %> Forums</h1>

<div id="forum_list_header">
  <div class="last_post">Last Post</div>
  <div class="info">Forum</div>
</div>

<ul id="forums_list">
  <%= render :partial => 'forum', :collection => @forums%>
</ul>
<br />
<%- if is_admin @u%>
Drag forum rows to reorder.<br/>
<%= inline_tb_link('Create a new forum', "new_forum", :title => "Creating a new forum") %>
<div id="new_forum" class="hidden">
  <% less_remote_form_for(@forum) do |f| %>
    <%= render :partial => 'form', :locals => {:f => f} %>
  <% end %>
</div>

<%= sortable_element('forums_list', :url => {:action => :update_positions}) %>


<%- end%>