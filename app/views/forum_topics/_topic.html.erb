<tr id="<%= dom_id(topic)%>">
  <td class="">
    <%= link_to topic.title, forum_topic_path(@forum, topic) %>

  </td>
  
  <td class="posts">
    <%= topic.posts.count %>
  </td>

  <td class="last_post">
    <%= topic_last_post_info topic%>
  </td>
  
  <%- if @u and @u.is_admin %>
  <td class="controls">
    <%= link_to 'Edit', edit_forum_topic_path(@forum, topic) %> : 
    <%= link_to 'Destroy', forum_topic_path(@forum, topic), :confirm => 'Are you sure?', 
                                                       :method => :delete, 
                                                       :class=> "destroy" %>
  </td>
  <% end %>
</tr>